---
import { type CollectionEntry, getCollection } from "astro:content";
import SocialList from "@/components/SocialList.astro"; // 取消注释
import PostPreview from "@/components/blog/PostPreview.astro";
import Note from "@/components/note/Note.astro";
import { getAllPosts } from "@/data/post";
import PageLayout from "@/layouts/Base.astro";
import { collectionDateSort } from "@/utils/date";
export const prerender = true;

// Posts
const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = allPosts
	.sort(collectionDateSort)
	.slice(0, MAX_POSTS) as CollectionEntry<"post">[];

// Notes - 可以调整为显示几条笔记
const MAX_NOTES = 3; // 从0改为3
const allNotes = await getCollection("note");
const latestNotes = allNotes.sort(collectionDateSort).slice(0, MAX_NOTES);
---

<PageLayout meta={{ title: "主页" }}>
	<!-- 可以添加个人简介区域 -->
	<section class="mb-12">
		<h1 class="title mb-6">欢迎来到 Hangdn's Blog</h1>
		<p class="mb-4 text-lg">
			这里分享技术、生活和思考。记录成长，分享知识。
		</p>
		<SocialList /> <!-- 取消注释显示社交链接 -->
	</section>
	
	<section aria-label="Blog post list">
		<h2 class="title mb-6 text-xl text-accent"><a href="/posts">最近文章</a></h2>
		<ul class="space-y-4" role="list">
			{
				allPostsByDate.map((p) => (
					<li class="grid gap-2 sm:grid-cols-[auto_1fr]">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
		<h2 class="mt-7 grid gap-2 text-lg sm:grid-cols-[auto_1fr]">
			<a class="underline-offset-4 sm:hover:underline" href="/posts/">查看更多文章...</a>
		</h2>
	</section>
	
	{
		latestNotes.length > 0 && (
			<section class="mt-16">
				<h2 class="title mb-6 text-xl text-accent">
					<a href="/notes/">最新笔记</a>
				</h2>
				<ul class="space-y-4" role="list">
					{latestNotes.map((note) => (
						<li>
							<Note note={note} as="h3" isPreview />
						</li>
					))}
				</ul>
				<h2 class="mt-7 grid gap-2 text-lg sm:grid-cols-[auto_1fr]">
					<a class="underline-offset-4 sm:hover:underline" href="/notes/">查看所有笔记...</a>
				</h2>
			</section>
		)
	}
</PageLayout>
